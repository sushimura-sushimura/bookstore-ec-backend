<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bookstore_ec_backend.infrastructure.mybatis.BookMapper">

    <select id="findById" resultType="com.example.bookstore_ec_backend.domain.entity.BookEntity">
        SELECT
            id,
            title,
            author
        FROM
            book_entity
        WHERE
            id = #{bookId}
    </select>

</mapper>